<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/padding_10"
            android:background="@drawable/profile_bg">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_20"
                android:src="@drawable/ic_left_arrow"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_user"
                android:layout_marginTop="@dimen/margin_top_10"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_10"
                android:padding="@dimen/padding_10"
                android:text="Hi User Name"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeAbsoluteLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGreetings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"
                android:text="Good Morning"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/teal_200"
                android:textSize="@dimen/textSizeExtraLarge"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="2.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tvOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Order "
                    android:background="@drawable/profile_item_bg"
                    android:padding="@dimen/padding_20"
                    android:drawableTop="@drawable/recent_order"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Announcement"
                    android:background="@drawable/profile_item_bg"
                    android:padding="@dimen/padding_20"
                    android:gravity="center_vertical|center_horizontal"
                    android:drawableTop="@drawable/announcement"
                    android:textSize="@dimen/textSizeNormal" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_10"
            android:weightSum="2.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate this App"
                    android:background="@drawable/profile_item_bg"
                    android:padding="@dimen/padding_20"
                    android:gravity="center_vertical|center_horizontal"
                    android:drawableTop="@drawable/rating"
                    android:textSize="@dimen/textSizeNormal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tvSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Settings     "
                    android:background="@drawable/profile_item_bg"
                    android:padding="@dimen/padding_20"
                    android:gravity="center_vertical|center_horizontal"
                    android:drawableTop="@drawable/gear" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_10"
            android:weightSum="2.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     Support     "
                    android:background="@drawable/profile_item_bg"
                    android:padding="@dimen/padding_20"
                    android:gravity="center_vertical|center_horizontal"
                    android:drawableTop="@drawable/support"
                    android:textSize="@dimen/textSizeNormal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      About      "
                    android:background="@drawable/profile_item_bg"
                    android:padding="@dimen/padding_20"
                    android:gravity="center_vertical|center_horizontal"
                    android:drawableTop="@drawable/about"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>