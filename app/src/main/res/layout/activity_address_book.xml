<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey"
        tools:context=".AddressBook">

        <include
            android:id="@+id/layout_actionBar"
            layout="@layout/ab_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_10"
            android:background="@color/white"
            android:weightSum="3.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.3">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_home"
                    android:layout_margin="@dimen/margin_5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_top_10"
                android:layout_marginBottom="@dimen/margin_bottom_10"
                android:layout_weight="0.4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:padding="@dimen/padding_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeLarge" />

                <TextView
                    android:id="@+id/tvHomeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Sports Complex, Sector 43-A, Chandigarh, India, 160043"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/textSizeLarge" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.3">

                <ImageView
                    android:id="@+id/btEditHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:layout_margin="@dimen/margin_5"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_10"
            android:background="@color/white"
            android:weightSum="3.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_work"
                    android:layout_margin="@dimen/margin_5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_top_10"
                android:layout_marginBottom="@dimen/margin_bottom_10"
                android:layout_weight="0.4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work"
                    android:padding="@dimen/padding_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeLarge" />

                <TextView
                    android:id="@+id/tv_workAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work"
                    android:visibility="gone"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/textSizeLarge" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.3">

                <ImageView
                    android:id="@+id/btWorkEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:layout_margin="@dimen/margin_5"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_10"
            android:background="@color/white"
            android:weightSum="3.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    android:layout_margin="@dimen/margin_5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_top_10"
                android:layout_marginBottom="@dimen/margin_bottom_10"
                android:layout_weight="0.4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:padding="@dimen/padding_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeLarge" />

                <TextView
                    android:id="@+id/tvOtherLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:visibility="gone"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/textSizeLarge" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.3">

                <ImageView
                    android:id="@+id/btOtherEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:layout_margin="@dimen/margin_5"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>